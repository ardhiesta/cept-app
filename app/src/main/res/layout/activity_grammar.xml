<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityKuisGrammar"
    android:background="#FFFFCC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVPertanyaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:text="pertanyaan" />

            <TextView
                android:id="@+id/TVpilihan1"
                android:text="pilihA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="opsi1klik" />

            <TextView
                android:id="@+id/TVpilihan2"
                android:text="PilihB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="opsiKlik2" />

            <TextView
                android:id="@+id/TVpilihan3"
                android:text="PilihC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="opsiKlik3" />

            <TextView
                android:id="@+id/TVpilihan4"
                android:text="pilihD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="opsiKlik4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TvPenjelasan"
                />


        </LinearLayout>


    </ScrollView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/BtnNext"
            android:onClick="tampilkanPertanyaanSelanjutnya"
            android:textSize="25dp"
            android:background="#FF9900"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"/>


</RelativeLayout>
