<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_grammar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_soal_grammar_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[soal grammar]" />

            <TextView
                android:id="@+id/tv_jawaban_grammar_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[jawaban]" />

            <TextView
                android:id="@+id/tv_penjelasan_grammar_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[penjelasan]" />

            <TextView
                android:id="@+id/tv_opsi_grammar_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[opsi]" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>